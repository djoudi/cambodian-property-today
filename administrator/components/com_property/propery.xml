<?xml version="1.0" encoding="utf-8"?>
<install type="component" version="1.6.0" method="upgrade">
    <name>Property</name>
    <!-- The following elements are optional and free of formatting conttraints -->
    <creationDate>November 2010</creationDate>
    <author>Joomlist.org</author>
    <authorEmail>dev@joomlist.org</authorEmail>
    <authorUrl>http://www.joomlist.org</authorUrl>
    <copyright>Copyright Info.txt </copyright>
    <license>Licence.txt</license>
    <!--  The version string is recorded in the components table -->
    <version>1.0</version>
    <!-- The description is optional and defaults to the name -->
    <description>Complete feature for your property company</description>

    <!-- Site Main File Copy Section -->
    <!-- Note the folder attribute: This attribute describes the folder
            to copy FROM in the package to install therefore files copied
            in this section are copied from /site/ in the package -->
    <files folder="site">
            <filename>property.php</filename>
    </files>

    <administration>
        <!-- Administration Menu Section -->
        <menu>Property</menu>
        <!-- Administration Main File Copy Section -->
        <!-- Note the folder attribute: This attribute describes the folder
                to copy FROM in the package to install therefore files copied
                in this section are copied from /admin/ in the package -->
        <files folder="admin">
                <!-- Admin Main File Copy Section -->
                <filename>property.php</filename>
        </files>
    </administration>
</install>

